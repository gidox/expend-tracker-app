{
  "extends": "expo/tsconfig.base",
  "include": ["./src"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "baseUrl": "src",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"]
    }
  }
}
